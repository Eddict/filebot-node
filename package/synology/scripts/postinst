#!/bin/sh
FILEBOT_NODE_DATA="/var/packages/filebot-node/target/data"

# prepare application data folder with read / write permissions for all users
mkdir "$FILEBOT_NODE_DATA"

# prepare log file permissions
touch "$FILEBOT_NODE_DATA/filebot.log"
chmod 666 "$FILEBOT_NODE_DATA/filebot.log"

# return successfully
exit 0
