#!/bin/sh


case "$1" in
	start)
		"$SYNOPKG_PKGDEST/bin/filebot-node-start" > "$SYNOPKG_PKGDEST/filebot-node.log" 2>&1 &
		exit $?
	;;

	stop)
		kill "$("$0" pid)"
		exit $?
	;;

	status)
		test ! -z "$("$0" pid)"
		exit $?
	;;

	pid)
		ps -u "root" -o "pid cmd" | awk '$2 == "filebot-node" { print $1; exit }'
		exit $?
	;;
esac
