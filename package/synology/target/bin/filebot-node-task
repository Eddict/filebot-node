#!/bin/sh -u

export USER=$(whoami)  # make sure that $USER is set correctly

export DATA="/var/packages/filebot-node/target/data" # DSM 6.2.4
# export DATA="/var/packages/filebot-node/var"       # DSM 7

export TASK="$1"

export JAVA_OPTS=$(awk '/MemTotal:/ { xmx = ($2*0.8)/1024; if (xmx < 1024) { printf "-Xmx%dm", xmx }; exit}' /proc/meminfo)  # set -Xmx to 0.8 of physical memory (on low-memory devices)

FILEBOT_NODE_DATA="/var/packages/filebot-node/target/data" # DSM 6.2.4
# FILEBOT_NODE_DATA="/var/packages/filebot-node/var"       # DSM 7

filebot "@$DATA/task/$TASK.args" 2>&1 | tee -a "$DATA/log/$TASK.log"

STATUS="${PIPESTATUS[0]}"

# treat ExitCode.NOOP as ExitCode.SUCCESS
if [ $STATUS -eq 100 ]; then
	exit 0
fi

exit $STATUS
